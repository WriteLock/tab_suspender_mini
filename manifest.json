{
    "manifest_version": 2,
    "name": "Tab Suspender",
    "version": "1.0",
    "description": "Suspends inactive tabs after 60 seconds",
    "permissions": [
        "tabs",
        "<all_urls>",
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": [
            "src/background/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "src/popup/popup.html"
    },
    "web_accessible_resources": [
        "src/suspended/suspended.html",
        "src/suspended/suspended.js"
    ]
}